filetype plugin indent on
syntax on

set nocompatible
set ttyfast
set backspace=indent,eol,start
set modeline
set modelines=10
set hidden

set ruler
set number
set numberwidth=2
set title
set incsearch
set nowrap

set colorcolumn=80

set tabstop=2
set shiftwidth=2
set softtabstop=2
set copyindent
set autoindent

set background=dark
colorscheme default
